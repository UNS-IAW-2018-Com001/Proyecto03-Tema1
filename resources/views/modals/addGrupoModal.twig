	<!-- Add Grupo Modal HTML -->
	<div id="addModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content" id="contentadd">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Añadir Grupo</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<div class="form-group">
							<label>Nombre <label class="obligatorio">(*)</label></label>
							<input type="text" class="form-control" required id='addNombreGrupo'>
						</div>
						<div class="form-group">
							<label>Codigo <label class="obligatorio">(*)</label></label>
							<input type="text" class="form-control" required id='addCodigoGrupo'>
						</div>
						<div class="form-group">
							<label>Fecha de Creacion <label class="obligatorio">(*)</label></label>
                   			<input  type="text" class="form-control dateFormat" required readonly id='addFechaGrupo'>
						</div>
						<div class="form-group">
							<label>Hora de Inicio de Actividad <label class="obligatorio">(*)</label></label>
							<input type="text" class="form-control hourFormat" required readonly id='addInicioGrupo'>
						</div>
						<div class="form-group">
							<label>Hora de Fin de Actividad <label class="obligatorio">(*)</label></label>
							<input type="text" class="form-control hourFormat" required readonly id='addFinGrupo'>
						</div>
						<div class="form-group">
							<label>Sitio Web</label>
							<input type="text" class="form-control" id='addWebGrupo'>
						</div>
						<div class="form-group">
							<label>Telefono</label>
							<input type="text" class="form-control" id='addTelefonoGrupo'>
						</div>
						<div class="form-group">
							<label>Email</label>
							<input type="text" class="form-control" id='addEmailGrupo'>
						</div>
						<div class="form-group">
							<label>Religión <label class="obligatorio">(*)</label></label>
							<select class="selectpicker form-control col-md-10 "id='addReligionGrupo'>
  								<option>Religión Heterogenea</option>
  								<option>Budista</option>
  								<option>Católica</option>
  								<option>Cristiano Evangélico</option>
  								<option>Judio</option>
  								<option>Santos de los Ultimos Días</option>
  								<option>Musulman</option>
							</select>
						</div>
						<div class="form-group">
							<label>Ubicacion <label class="obligatorio">(*)</label></label>
							<input type="text" class="form-control"  required readonly id='addUbicacionGrupo'>
							<a href="#ubicacionModal" class="btn btn-primary col-md-12 btn-xs" data-toggle="modal"> <i class="material-icons">&#xE147;</i> <span>Añadir Ubicación</span></a>	
						</div>
						<div class="form-group">
							<label>Ramas <label class="obligatorio">(*)</label></label>
							<input type="text" class="form-control" required  readonly id='addRamasGrupo'>
							<a href="#ubicacionModal" class="btn btn-primary col-md-12 btn-xs" data-toggle="modal"> <i class="material-icons">&#xE147;</i> <span>Añadir Ramas</span></a>	
						</div>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
						<input type="submit" class="btn btn-success" value="Añadir" id="addGrupoSubmit">
					</div>
				</form>
			</div>
		</div>
	</div>
